{
  "name": "@myorg/monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev",
    "start": "turbo run start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "dotenv -e .env -- turbo run db:generate",
    "db:migrate": "dotenv -e .env -- turbo run db:migrate",
    "db:migrate:deploy": "dotenv -e .env -- turbo run db:migrate:deploy",
    "db:seed": "dotenv -e .env -- turbo run db:seed",
    "db:push": "dotenv -e .env -- turbo run db:push",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:db:migrate": "docker-compose run --rm api pnpm --filter @myorg/db db:migrate:deploy",
    "docker:db:seed": "docker-compose run --rm api pnpm --filter @myorg/db db:seed",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "prepare": "node -e \"if (!process.env.CI && !process.env.DOCKER_BUILD) try { require('child_process').spawnSync('lefthook', ['install'], { stdio: 'inherit' }) } catch (e) {}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lefthook": "^1.5.5",
    "prettier": "^3.1.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
